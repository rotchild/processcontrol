<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/setting_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topHeight_size"
        android:background="@color/orangered"
        >
        <ImageView
            android:id="@+id/ipsetting_back"
            android:layout_width="@dimen/default_icon_size"
            android:layout_height="@dimen/default_icon_size"
            android:scaleType="centerInside"

            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_size"
            android:src="@drawable/go_back"
            />
        <TextView
            android:id="@+id/settingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ip设置"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >
        <TextView
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="IP地址："
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_size" />
        <EditText
            android:id="@+id/ip_et"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_marginRight="20dp"
            android:layout_weight="2.5"
            android:text=""
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            android:background="@drawable/sfrag_radius_halftrans"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >
        <TextView
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="端口："
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_size" />
        <EditText
            android:id="@+id/port_et"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_marginRight="20dp"
            android:layout_weight="2.5"
            android:text=""
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            android:background="@drawable/sfrag_radius_halftrans"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/save_yes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_roundbig_red"
                android:text="确认"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/login_size"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/save_no"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/red_radius_halftrans"
                android:text="取消"
                android:textColor="@color/orangered"
                android:textSize="@dimen/login_size"
                />
        </RelativeLayout>



    </LinearLayout>
</LinearLayout>

