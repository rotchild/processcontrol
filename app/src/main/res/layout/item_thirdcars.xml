<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        >
        <TextView
            android:id="@+id/item_thirdcars_licenseno"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_height"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
        <Button
            android:id="@+id/item_thirdcars_add"
            android:layout_width="50dip"
            android:layout_height="@dimen/hdetail_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_roundbig_yellow"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="20dip"
            />

        <Button
            android:id="@+id/item_thirdcars_dsappointment"
            android:layout_width="@dimen/wdetail_button"
            android:layout_height="@dimen/hdetail_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
             android:background="@drawable/button_roundbig_red"
              android:text="定损预约"
              android:textColor="@color/white"
              android:textSize="@dimen/login_size"
        />
        <Button
            android:id="@+id/item_thirdcars_detail"
            android:layout_width="@dimen/wdetail_button"
            android:layout_height="@dimen/hdetail_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:background="@drawable/button_roundbig_red"
            android:text="详情"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/login_size"

            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/item_thirdcars_editlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_marginTop="8dip"
        >
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="@dimen/hdetail_button"
            android:layout_weight="3"
            >
            <EditText
                android:id="@+id/item_thirdcars_edit"
                android:layout_width="160dip"
                android:layout_height="@dimen/hdetail_button"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:hint="请输入车牌号"
                android:layout_centerVertical="true"
                android:textColor="@color/maintext"
                android:textSize="@dimen/default_size"
                android:background="@drawable/sfrag_radius_halftrans"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/item_thirdcars_addcancel"
            android:layout_width="1dp"
            android:layout_height="@dimen/hdetail_button"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/red_radius_halftrans"
            android:text="取消"
            android:textColor="@color/orangered"
            android:layout_alignParentRight="true"
            />
        <Button
            android:id="@+id/item_thirdcars_addok"
            android:layout_width="1dp"
            android:layout_height="@dimen/hdetail_button"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="确认"
            android:textColor="@color/white"
            android:background="@drawable/button_roundbig_red"
            android:layout_toLeftOf="@id/item_thirdcars_addcancel"
            />
    </LinearLayout>
</LinearLayout>
