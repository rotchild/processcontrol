<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

    >

    <RelativeLayout
        android:id="@+id/title_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topHeight_size"
        android:background="@color/orangered"
        >

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="@dimen/default_icon_size"
            android:layout_height="@dimen/default_icon_size"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/go_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="获票任务"
            android:textColor="@color/white"
            android:textSize="16dip"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="@integer/weight1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="获票状态："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_ticket_state"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="@integer/weight1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="报案号："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_caseNo"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="报案时间："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_caseTime"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="派发时间："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_outTime"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="定损联系人："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_reporter1"
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/tel_blue"
            android:textSize="@dimen/detail_size"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="定损联系电话："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_reporterPhone1"
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/tel_blue"
            android:textSize="@dimen/detail_size"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="车牌号："
            android:textSize="@dimen/detail_size"
            />

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/hp_detail_licenseno"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_height"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/maintext"
                android:textSize="@dimen/detail_size"
                />

            <Button
                android:id="@+id/cbrs_btn"
                android:layout_width="@dimen/wdetail_button"
                android:layout_height="@dimen/hdetail_button"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_roundbig_yellow"
                android:text="催办人伤"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/login_size"
                />

            <Button
                android:id="@+id/go_detail"
                android:layout_width="@dimen/wdetail_button"
                android:layout_height="@dimen/hdetail_button"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:background="@drawable/button_roundbig_red"
                android:text="详情"
                android:textColor="@color/white"
                android:textSize="@dimen/login_size"
                android:visibility="gone"

                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:text="车辆品牌："
            android:textSize="@dimen/detail_size"
            />

        <TextView
            android:id="@+id/hp_detail_brand"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="奥迪"
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="风险类型："
            android:textSize="@dimen/detail_size"
            />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_height"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="风险类型1"
                android:textColor="@color/maintext"
                android:textSize="@dimen/detail_size"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_height"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="风险类型2"
                android:textColor="@color/maintext"
                android:textSize="@dimen/detail_size"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_height"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="风险类型3"
                android:textColor="@color/maintext"
                android:textSize="@dimen/detail_size"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="车辆品牌："
            android:textSize="@dimen/detail_size"/>
        <TextView
            android:id="@+id/hp_detail_vehicleBrand"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="属性："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_car_role"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="风险等级："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_risklevel"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hp_ticket_amount_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="合作厂商："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_cooperative_name"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hp_ticket_amount_list2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="获票金额："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_ticket_amount"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hp_ticket_amount_list3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_width="1dp"
        android:layout_height="@dimen/list_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="应获票厂商："
        android:textSize="@dimen/detail_size"/>

    <TextView
        android:id="@+id/hp_detail_should_ticket_garage"
        android:layout_width="1dp"
        android:layout_height="@dimen/list_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/maintext"
        android:textSize="@dimen/detail_size"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/hp_ticket_amount_list4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="应获票金额："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_should_ticket_amount"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hp_ticket_amount_list5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="实出票厂商："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_real_ticket_garage"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hp_ticket_amount_list6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="实出票时间："
            android:textSize="@dimen/detail_size"/>

        <TextView
            android:id="@+id/hp_detail_real_ticket_time"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/approve_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_roundbig_red"
            android:text="上报审批"
            android:textSize="@dimen/login_size"
            />
    </LinearLayout>
</LinearLayout>
