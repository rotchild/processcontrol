<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/title_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topHeight_size"
        android:background="@color/orangered"
        >

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="@dimen/default_icon_size"
            android:layout_height="@dimen/default_icon_size"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/go_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="风险上报详情"
            android:textColor="@color/white"
            android:textSize="16dip"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/weight1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="@integer/weight1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="报案号："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_detail_caseNo"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="--"
                    android:textColor="@color/maintext"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="报案时间："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_detail_caseTime"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="--"
                    android:textColor="@color/maintext"
                    android:textSize="@dimen/detail_size"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="上报时间："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_detail_outTime"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="--"
                    android:textColor="@color/maintext"
                    android:textSize="@dimen/detail_size"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="上报人："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_detail_reporter"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="--"
                    android:textColor="@color/maintext"
                    android:textSize="@dimen/detail_size"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="风险上报类型："
                    android:textSize="@dimen/detail_size"
                    />

                <LinearLayout
                    android:id="@+id/dck_risktype_wrapper"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/list_height"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="风险类型1"
                        android:textColor="@color/maintext"
                        android:textSize="@dimen/detail_size"
                        android:visibility="gone"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/list_height"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="风险类型2"
                        android:textColor="@color/maintext"
                        android:textSize="@dimen/detail_size"
                        android:visibility="gone"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/list_height"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="风险类型3"
                        android:textColor="@color/maintext"
                        android:textSize="@dimen/detail_size"
                        android:visibility="gone"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="状态："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_detail_state"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="--"
                    android:textColor="@color/maintext"
                    android:textSize="@dimen/detail_size"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="审核人："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_detail_auditor"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="--"
                    android:textColor="@color/maintext"
                    android:textSize="@dimen/detail_size"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/fxsb_detail_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/button_roundbig_red"
                        android:text="确认"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/login_size"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/fxsb_detail_no"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/red_radius_halftrans"
                        android:text="取消"
                        android:textColor="@color/orangered"
                        android:textSize="@dimen/login_size"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
