<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/title_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topHeight_size"
        android:background="@color/orangered"
        >

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="@dimen/default_icon_size"
            android:layout_height="@dimen/default_icon_size"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/go_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="风险上报"
            android:textColor="@color/white"
            android:textSize="16dip"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/weight1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="@integer/weight1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="报案号："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_edit_caseNo"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="PDAZ00000000000000"
                    android:textColor="@color/maintext"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="报案时间："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_edit_caseTime"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="2017-07-25 10:22:45"
                    android:textColor="@color/maintext"
                    android:textSize="@dimen/detail_size"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="出险时间："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_edit_outTime"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="2017-07-25 10:22:45"
                    android:textColor="@color/maintext"
                    android:textSize="@dimen/detail_size"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="报案人："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_edit_reporter"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="何峰"
                    android:textColor="@color/maintext"
                    android:textSize="@dimen/detail_size"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="报案电话："
                    android:textSize="@dimen/detail_size"/>

                <TextView
                    android:id="@+id/fxsb_edit_reporterPhone"
                    android:layout_width="1dp"
                    android:layout_weight="2"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"

                    android:gravity="center_vertical"
                    android:text="13554219576"
                    android:textColor="@color/tel_blue"
                    android:textSize="@dimen/detail_size"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="车牌号："
                    android:textSize="@dimen/detail_size"/>
                <TextView
                    android:id="@+id/fxsb_edit_vehicleBrand"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:text="赣11111111"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/maintext"
                    android:textSize="@dimen/default_size"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                android:id="@+id/risk_notice_tip"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="风险类型"
                    android:textSize="@dimen/detail_size"/>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_height"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dip"
                        >
                        <Button
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/tip"
                            android:gravity="center_vertical"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >
                <TextView
                    android:id="@+id/fxsb_edit_type1"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="风险类型1"

                    android:background="@drawable/type_border_radius"
                    android:textSize="@dimen/detail_size"/>
                <TextView
                    android:id="@+id/fxsb_edit_type2"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="风险类型2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/type_border_radius"
                    android:textSize="@dimen/detail_size"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:text="风险类型3"
                    android:id="@+id/fxsb_edit_type3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/type_border_radius"
                    android:textSize="@dimen/detail_size"/>
                <TextView
                    android:id="@+id/fxsb_edit_type4"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="风险类型4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/type_border_radius"
                    android:textSize="@dimen/detail_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >
                <TextView
                    android:id="@+id/fxsb_edit_type5"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="风险类型5"

                    android:background="@drawable/type_border_radius"
                    android:textSize="@dimen/detail_size"/>
                <TextView
                    android:id="@+id/fxsb_edit_type6"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="风险类型6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/type_border_radius"
                    android:textSize="@dimen/detail_size"/>
                <TextView
                    android:id="@+id/fxsb_edit_type7"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:text="风险类型7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/type_border_radius"
                    android:textSize="@dimen/detail_size"/>
                <TextView
                    android:id="@+id/fxsb_edit_type8"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="风险类型8"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/type_border_radius"
                    android:textSize="@dimen/detail_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"
                android:layout_marginBottom="@dimen/book_list_margin"
                >

                <TextView
                    android:id="@+id/fxsb_edit_type9"
                    android:layout_width="79dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/type_border_radius"
                    android:gravity="center"
                    android:text="风险类型9"
                    android:textSize="@dimen/detail_size"/>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:orientation="horizontal"
                    android:layout_weight="20"
                    >
                <TextView
                    android:id="@+id/fxsb_edit_typeqt"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:singleLine= "true"
                    android:gravity="center"
                    android:text="其他"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/type_border_radius"
                    android:textSize="@dimen/detail_size"/>
                    <EditText
                        android:id="@+id/qt_input"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/list_height"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/maintext"
                        android:textSize="@dimen/default_size"
                        android:background="@drawable/sfrag_radius_halftrans"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/book_list_margin"
            >
            <TextView
                android:layout_width="1dp"
                android:layout_height="@dimen/list_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="备注："
                android:textSize="@dimen/detail_size"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/book_list_margin"

                >
              <EditText
                    android:id="@+id/bz_input"
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:enabled="true"
                    android:gravity="top"
                    android:minLines="8"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:background="@drawable/textarea"
                    android:textSize="@dimen/detail_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/fxsb_edit_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/button_roundbig_red"
                        android:text="确认"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/login_size"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/fxsb_edit_no"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/red_radius_halftrans"
                        android:text="取消"
                        android:textColor="@color/orangered"
                        android:textSize="@dimen/login_size"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
