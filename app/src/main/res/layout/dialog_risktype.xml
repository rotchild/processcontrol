<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/dialog_risk"
              android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:gravity="center"
        android:layout_gravity="center"
        android:topLeftRadius="20dip"
        android:background="@drawable/redhead_background"
        >
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="系统风险提醒"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            />
    </RelativeLayout>

    <LinearLayout
                  android:id="@+id/dialog_riskcontent"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:visibility="visible"

        >
        <ListView
            android:id="@+id/riskwarm_list"
            android:layout_width="match_parent"
            android:divider="@null"
            android:layout_height="wrap_content"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:background="@drawable/whitehead_background"
        >
        <Button
            android:id="@+id/confirm_bt_single"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_roundbig_red"
            android:text="确认"
            android:textSize="@dimen/login_size"
            />
    </LinearLayout>
</LinearLayout>
