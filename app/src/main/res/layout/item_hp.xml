<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/item_hp"
              android:orientation="vertical">

    <FrameLayout
        android:layout_height="50dip"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:topLeftRadius="20dip"
        android:background="@color/transparent"
        >
        <RelativeLayout
            android:id="@+id/hp_head_change"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/grayhead_background"
            >
            <TextView
                android:id="@+id/hp_caseNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/default_size"
                />

            <TextView
                android:id="@+id/hp_licenseno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/default_size"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/hp_new_tag"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:src="@drawable/ico_new"
            />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        >
        <TextView
            android:id="@+id/case_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="报案时间："
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />
        <TextView
            android:id="@+id/hp_caseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/case_time_title"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />
        <TextView
            android:id="@+id/hp_hurt_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="@color/typered"
            android:textSize="@dimen/default_size"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/hp_hurt_state_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/hp_hurt_state"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/red_medical"
            android:visibility="invisible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/msafe_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="风险等级："
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />

        <TextView
            android:id="@+id/hp_risklevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/msafe_num"
            android:text="--"
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />

        <TextView
            android:id="@+id/hp_tickestate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="--"
            android:textColor="@color/typegreen"
            android:textSize="@dimen/default_size"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/hp_tickestate"
            android:gravity="center"
            android:text="获票状态："
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />

    </RelativeLayout>

</LinearLayout>
