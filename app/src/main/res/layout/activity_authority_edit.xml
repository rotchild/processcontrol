<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/title_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topHeight_size"
        android:background="@color/orangered"
        >

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="@dimen/default_icon_size"
            android:layout_height="@dimen/default_icon_size"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/go_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="超权限上报"
            android:textColor="@color/white"
            android:textSize="16dip"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:layout_margin="10dip"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/weight1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:layout_weight="@integer/weight1"


                    android:text="估损金额："
                    android:textSize="@dimen/detail_size"/>
                 <RelativeLayout
                     android:layout_width="1dp"
                     android:layout_weight="3"
                     android:layout_height="@dimen/list_height"

                     android:layout_marginRight="16dp"
                     >
                     <EditText
                         android:id="@+id/authority_expect_amount"
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/list_height"
                         android:layout_marginRight="30dp"
                         android:layout_alignParentStart="true"
                         android:layout_alignParentTop="true"
                         android:layout_gravity="center_vertical"
                         android:background="@drawable/sfrag_radius_halftrans"
                         android:gravity="center_vertical"
                         android:inputType="numberDecimal"
                         android:text=""
                         android:textColor="@color/maintext"
                         android:textSize="@dimen/default_size"/>
                     <TextView
                         android:layout_width="20dp"
                         android:layout_height="@dimen/list_height"
                         android:layout_gravity="center_vertical"
                         android:layout_weight="@integer/weight1"
                         android:gravity="center_vertical"
                         android:text="元"
                         android:layout_alignParentRight="true"
                         android:textSize="@dimen/detail_size"
                         android:textColor="@color/maintext"
                         />
                 </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="车辆品牌："
                    android:textSize="@dimen/detail_size"/>
                <EditText
                    android:id="@+id/authority_vehicleBrand"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_weight="3"
                    android:layout_marginRight="16dp"
                    android:text=""
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/maintext"
                    android:textSize="@dimen/default_size"
                    android:background="@drawable/sfrag_radius_halftrans"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/list_height"
                    android:layout_weight="1"

                    android:gravity="right"
                    android:text="备注："
                    android:textSize="@dimen/detail_size"/>

                <EditText
                    android:id="@+id/authority_remarks"
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="3"
                    android:enabled="true"
                    android:gravity="top"
                    android:minLines="8"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:text=""
                    android:background="@drawable/textarea"
                    android:textSize="@dimen/detail_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/authority_edit_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/button_roundbig_red"
                        android:text="确认"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/login_size"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/authority_edit_no"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/red_radius_halftrans"
                        android:text="取消"
                        android:textColor="@color/orangered"
                        android:textSize="@dimen/login_size"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
