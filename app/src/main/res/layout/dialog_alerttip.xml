<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/dialog_risk"
              android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:gravity="center"
        android:layout_gravity="center"
        android:topLeftRadius="20dip"
        android:background="@drawable/redhead_background"
        >
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/dialog_approvecontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30px"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#fff"
        >
        <TextView
            android:id="@+id/dialog_alert_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提示语"
            android:textColor="@color/maintext"
            android:textSize="@dimen/title_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/whitehead_background"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/risktip_confirm_bt"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_roundbig_red"
            android:text="确认"
            android:textSize="@dimen/login_size"
            />
    </LinearLayout>
</LinearLayout>
