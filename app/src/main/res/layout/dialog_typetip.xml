<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/type_select_xml"
              android:orientation="vertical"
              android:background="#fff"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:gravity="center_vertical|left"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:background="#f0f0f0"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立案状态"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:textSize="18dp"
            />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="#fff"
            >
            <TextView
                android:id="@+id/typetip_lian_yes"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="已立案"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/maintext"
                android:layout_marginRight="16dp"
                android:background="@drawable/base_no_radius"
                />
            <TextView
                android:id="@+id/typetip_lian_no"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="未立案"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/maintext"
                android:background="@drawable/base_no_radius"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:gravity="center_vertical|left"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:background="#f0f0f0"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上报状态"
                android:layout_centerInParent="true"
                android:textColor="#000"
                android:textSize="18dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="#fff"
            >
            <TextView
                android:id="@+id/typetip_shangbao_yes"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="已上报"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/maintext"
                android:layout_marginRight="16dp"
                android:background="@drawable/base_no_radius"
                />
            <TextView
                android:id="@+id/typetip_shangbao_no"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="未上报"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/maintext"
                android:background="@drawable/base_no_radius"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:gravity="center_vertical|left"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:background="#f0f0f0"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风险状态"
                android:layout_centerInParent="true"
                android:textColor="#000"
                android:textSize="18dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="#fff"
            >
            <TextView
                android:id="@+id/typetip_fengxian_yes"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="风险案件"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/maintext"
                android:layout_marginRight="16dp"
                android:background="@drawable/base_no_radius"
                />
            <TextView
                android:id="@+id/typetip_fengxian_no"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="无风险"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/maintext"
                android:background="@drawable/base_no_radius"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/whitehead_background"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/type_reset"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/base_no_radius"
            android:text="重置"
            android:layout_weight="1"
            android:textColor="@color/maintext"
            android:textSize="@dimen/login_size"
            />

        <Button
            android:id="@+id/type_yes"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/orangered"
            android:text="确认"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/login_size"
            />
    </LinearLayout>
</RelativeLayout>
