<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_fxsb"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:gravity="center|center_horizontal|center_vertical"
              android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/item_fxsb_createtime"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_weight="3"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="2017-07-25 10:22:45"
            android:textColor="@color/maintext"
            android:textSize="@dimen/detail_size"
            />
        <TextView
            android:id="@+id/item_fxsb_state"
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_weight="2"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="审核通过"
            android:textColor="@color/check_green"
            android:textSize="@dimen/detail_size"
            />
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="@dimen/list_height"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            >
            <Button
                android:id="@+id/item_fxsb_detail"
                android:layout_width="60dip"
                android:layout_height="26dip"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="详情"
                android:textColor="@color/white"
                android:background="@drawable/button_roundbig_red"
                android:textSize="@dimen/detail_size"
                />
        </RelativeLayout>
    </LinearLayout>

