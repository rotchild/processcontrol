<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_rslb"
              android:orientation="vertical">
    <FrameLayout
        android:layout_height="50dip"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:topLeftRadius="20dip"
        android:background="@color/transparent"
        >
        <RelativeLayout
            android:id="@+id/rslb_head_change"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/grayhead_background"
            >
            <TextView
                android:id="@+id/rslb_caseNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:text="PDZA000000000010322"
                android:textColor="@color/white"
                android:textSize="@dimen/default_size"
                />

            <TextView
                android:id="@+id/rslb_licenseno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="赣A1SX00"
                android:textColor="@color/white"
                android:textSize="@dimen/default_size"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/rswork_new_tag"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:src="@drawable/ico_new"
            />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        >
        <TextView
            android:id="@+id/case_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="报案时间："
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />
        <TextView
            android:id="@+id/rslb_caseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/case_time_title"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />
        <TextView
            android:id="@+id/caseState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="@color/typered"
            android:visibility="invisible"
            android:textSize="@dimen/default_size"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/caseState"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@drawable/red_medical"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        >
        <TextView
            android:id="@+id/msafe_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="联系人："
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />
        <TextView
            android:id="@+id/rslb_contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/msafe_num"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />
        <TextView
            android:id="@+id/rslb_contactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/rslb_contactPhone"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="联系电话："
            android:layout_centerVertical="true"
            android:textColor="@color/maintext"
            android:textSize="@dimen/default_size"
            />

    </RelativeLayout>


</LinearLayout>
